<div class="page-header">
  <%= link_to new_estado_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Estado" %>
  <% end %>
  <h4>Listado de Estados</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Descripción</th>
            <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @estados) do |estado| %>
        <td><%= estado.descripcion %></td>
        <td style="width: 150px;">
        <%= link_to estado, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_estado_path(estado), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to estado, class: 'btn btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
