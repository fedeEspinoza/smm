<div class="page-header">
  <%= link_to new_novedad_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Novedad
  <% end %>
  <h4>Listado de novedades</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Codigo</th>
            <th>Descripcion</th>
            <th>Prioridad</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @novedads) do |novedad| %>
            <td><%= novedad.codigo %></td>
            <td><%= novedad.descripcion %></td>
            <td><%= novedad.prioridad %></td>
            <td><%= link_to 'Ver', novedad %></td>
        <td><%= link_to 'Editar', edit_novedad_path(novedad) %></td>
        <td><%= link_to 'Eliminar', novedad, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
