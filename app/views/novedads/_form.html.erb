<%= form_for(@novedad, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @novedad.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h5><b><%= fa_icon "exclamation-circle", text: "Atenci贸n! Ocurrieron los siguientes errores" %></b></h5>
      <ul>
      <% @novedad.errors.messages.values.each do |msg| %>
        <%msg.each do  |m| %>
          <li><%= m %></li>
        <%end %>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, "C贸digo", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :codigo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, "Descripci贸n", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :descripcion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prioridad_id, "Prioridad", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :prioridad_id, Prioridad.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :codigo_servicio, "C贸digo de servicio", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :codigo_servicio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :repite_estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.check_box :repite_estado, { class: 'form-control' }, true, false %>      
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
