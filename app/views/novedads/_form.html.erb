<%= form_for(@novedad, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @novedad.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@novedad.errors.count, "error") %> prohibited this novedad from being saved:</h4>

      <ul>
      <% @novedad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, "Código", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :codigo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, "Descripción", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :descripcion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prioridad_id, "Prioridad", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :prioridad_id, Prioridad.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
