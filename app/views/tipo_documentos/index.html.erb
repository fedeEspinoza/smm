<div class="page-header">
  <%= link_to new_tipo_documento_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Tipo de documento" %>
  <% end %>
  <h4>Listado de Tipos de documentos</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "wpforms", text: "Tipos de documentos" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Descripción</th>
          <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_documentos) do |tipo_documento| %>
        <td><%= tipo_documento.descripcion %></td>
        <td style="width: 150px;">
          <%= link_to tipo_documento, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
          <%= link_to edit_tipo_documento_path(tipo_documento), class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to tipo_documento, class: 'btn btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>                  
      <% end %>
    </tbody>
  </table>
</div>
