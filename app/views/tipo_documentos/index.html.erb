<div class="page-header">
  <%= link_to new_tipo_documento_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Tipo documento
  <% end %>
  <h4>Listado de Tipos de documentos</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Descripción</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_documentos) do |tipo_documento| %>
            <td><%= tipo_documento.descripcion %></td>
            <td><%= link_to 'Ver', tipo_documento %></td>
        <td><%= link_to 'Editar', edit_tipo_documento_path(tipo_documento) %></td>
        <td><%= link_to 'Eliminar', tipo_documento, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
