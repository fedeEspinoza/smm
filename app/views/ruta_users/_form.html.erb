<%= form_for(@ruta_user, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @ruta_user.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@ruta_user.errors.count, "error") %> prohibited this ruta_user from being saved:</h4>

      <ul>
      <% @ruta_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :rutum_id, "Ruta", class: "col-sm-3 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :rutum_id, Rutum.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, "Tomaestado", class: "col-sm-3 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :user_id, User.joins(:roles).where(roles: {descripcion: 'tomaestado'}), :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
