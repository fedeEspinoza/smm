<div class="page-header">
  <h4>Ruta asignada</h4>
</div>

<table style="width: 100%;">	

  <td class="col-md-6" style="vertical-align: top; width: 50%;">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= fa_icon "road" %> Datos de la Ruta</h3>
      </div>
      <div class="panel-body">
          <b>Número:</b> <%= @rutum.numero %>
          <br/>
          <b>Nombre:</b> <%= @rutum.nombre %>
          <br/>
          <b>Zona:</b> <%= @rutum.zona %>
          <br/>
          <b>Descripción:</b> <%= @rutum.descripcion %>
      </div>
    </div>
  </td>

  <td class="col-md-6" style="vertical-align: top; width: 50%;">    
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= fa_icon "user" %> Datos del Tomaestado</h3>
      </div>
      <div class="panel-body">      
          <b>Tomaestado:</b>
          <%= @ruta_user.user %>
          <br/>
          <b>Tipo de documento:</b>
          <%= @ruta_user.user.empleado.tipo_documento.descripcion %>
          <br/>
          <b>N° de documento:</b>
          <%= @ruta_user.user.empleado.nro_documento %>
          <br/>
          <b>Apellido y nombres:</b>
          <%= "#{@ruta_user.user.empleado.apellido}, #{@ruta_user.user.empleado.nombre}" %>
      </div>
    </div>
  </td>

</table>

	<div class="panel panel-info">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= fa_icon "user" %> Usuarios Asignados</h3>
	  </div>
	  <div class="panel-body">  
	    <table class="table table-striped table-bordered table-hover">
	       <thead>
	         <tr>
	           <th>Categoría</th>
	           <th>Número</th>
	           <th>Razón social</th>
	           <th>Datos personales</th>
	           <th>Domicilio de servicio</th>
	         </tr>
	       </thead>

	       <tbody>
	         <%= content_tag_for(:tr, @rutum.usuarios) do |usuario| %>
	           <td><%= usuario.categorium %></td>
	           <td><%= usuario.numero %></td>
	           <td><%= usuario.razon_social %></td>
	           <td><%= usuario.persona %></td>            
	           <td><%= usuario.domicilio_servicio %></td>     
	         <% end %>
	       </tbody>
	   </table>
	  </div>
	</div>
