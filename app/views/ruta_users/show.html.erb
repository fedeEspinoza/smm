<div class="page-header">
  <%= link_to ruta_users_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_ruta_user_path(@ruta_user), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Ver Ruta asignada</h4>
</div>
<ol class="breadcrumb">
  <li>
    <%= link_to ruta_user_path do %>
        <%= fa_icon "paperclip", text: "Listado de Rutas asignadas" %>
    <% end %>
  </li>
  <li class="active">
    Ver Ruta asignada
  </li>
</ol>

<div align="right">
  <%= link_to "#{ruta_user_path}.pdf", class: 'btn btn-sm btn-danger' do %>
    <%= fa_icon "file-pdf-o", text: "Exportar" %>
  <% end %>
</div>
<br/>

<div class="row">

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= fa_icon "road" %> Datos de la Ruta</h3>
      </div>
      <div class="panel-body">

        <dl class="dl-horizontal">
          <dt>Número:</dt>
          <dd><%= @rutum.numero %></dd>

          <dt>Nombre:</dt>
          <dd><%= @rutum.nombre %></dd>

          <dt>Zona:</dt>
          <dd><%= @rutum.zona %></dd>

          <dt>Descripción:</dt>
          <dd><%= @rutum.descripcion %></dd>

        </dl>

      </div>
    </div>    
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= fa_icon "user" %> Datos del Tomaestado</h3>
      </div>
      <div class="panel-body">      
        <dl class="dl-horizontal">

          <dt>Tomaestado:</dt>
          <dd><%= @ruta_user.user %></dd>

          <dt>Tipo de documento:</dt>
          <dd><%= @ruta_user.user.empleado.tipo_documento.descripcion %></dd>

          <dt>N° de documento:</dt>
          <dd><%= @ruta_user.user.empleado.nro_documento %></dd>

          <dt>Apellido y nombres:</dt>
          <dd><%= "#{@ruta_user.user.empleado.apellido}, #{@ruta_user.user.empleado.nombre}" %></dd>

        </dl>
      </div>
    </div>
  </div>

</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= fa_icon "user" %> Usuarios Asignados</h3>
  </div>
  <div class="panel-body">  
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Categoría</th>
                <th>Número</th>
                <th>Razón social</th>
                <th>Datos personales</th>
                <th>Domicilio de servicio</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @rutum.usuarios) do |usuario| %>
                <td><%= usuario.categorium.codigo %></td>
                <td><%= usuario.numero %></td>
                <td><%= usuario.razon_social %></td>
                <td><%= usuario.persona %></td>            
                <td><%= usuario.domicilio_servicio %></td>     
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
