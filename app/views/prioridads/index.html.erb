<div class="page-header">
  <%= link_to new_prioridad_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nueva Prioridad" %>
  <% end %>
  <h4>Listado de Prioridades</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "list-alt", text: "Prioridades" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Descripción</th>
            <th>Valor</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @prioridads.each do |prioridad| %>
        <tr>
          <td><%= prioridad.descripcion %></td>
          <td><%= prioridad.valor %></td>
          <td class="text-center">
          <%= link_to prioridad, class: 'btn btn-sm btn-default' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
          <%= link_to edit_prioridad_path(prioridad), class: 'btn btn-sm btn-default' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
          <%= link_to prioridad, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
