<div class="page-header">
  <%= link_to new_usuario_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Usuario
  <% end %>
  <h4>Listado de Usuarios</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Categoría</th>
            <th>Número</th>
            <th>Razón social</th>
            <th>Domicilio</th>
            <th>Circunscripción</th>
            <th>Sector</th>
            <th>Tipo</th>
            <th>Manzana</th>
            <th>Parcela</th>
            <th>Unidad funcional</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Estado</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuarios) do |usuario| %>
            <td><%= usuario.categorium %></td>
            <td><%= usuario.numero %></td>
            <td><%= usuario.razon_social %></td>
            <td><%= usuario.domicilio %></td>
            <td><%= usuario.circunscripcion %></td>
            <td><%= usuario.sector %></td>
            <td><%= usuario.tipo %></td>
            <td><%= usuario.manzana %></td>
            <td><%= usuario.parcela %></td>
            <td><%= usuario.unidad_funcional %></td>
            <td><%= usuario.latitud %></td>
            <td><%= usuario.longitud %></td>
            <td><%= usuario.estado %></td>
            <td><%= link_to 'Ver', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Eliminar', usuario, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
