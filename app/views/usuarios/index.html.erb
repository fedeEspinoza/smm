<div class="page-header">
  <%= link_to new_usuario_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Usuario
  <% end %>
  <h4>Listado de usuarios</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Categoría</th>
            <th>Número</th>
            <th>Razón social</th>
            <th>Domicilio</th>
            <!--<th>Circunscripción</th>
            <th>Sector</th>
            <th>Tipo</th>
            <th>Manzana</th>
            <th>Parcela</th>
            <th>Unidad funcional</th>
            <th>Latitud</th>
            <th>Longitud</th>-->
            <th>Estado</th>
            <th>Persona</th>
            <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuarios) do |usuario| %>
            <td><%= usuario.categorium %></td>
            <td><%= usuario.numero %></td>
            <td><%= usuario.razon_social %></td>
            <td><%= usuario.domicilio %></td>
            <!--<td><%= usuario.circunscripcion %></td>
            <td><%= usuario.sector %></td>
            <td><%= usuario.tipo %></td>
            <td><%= usuario.manzana %></td>
            <td><%= usuario.parcela %></td>
            <td><%= usuario.unidad_funcional %></td>
            <td><%= usuario.latitud %></td>
            <td><%= usuario.longitud %></td>-->
            <td><%= usuario.estado %></td>
            <td><%= usuario.persona %></td>
            <td style="width: 150px;">
            <%= link_to usuario, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
            <%= link_to edit_usuario_path(usuario), class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to usuario, class: 'btn btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
