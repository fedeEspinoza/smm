<div class="page-header">
  <%= link_to new_usuario_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Usuario" %>
  <% end %>
  <h4>Listado de Usuarios</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "user", text: "Usuarios" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Categoría</th>
            <th>Número</th>
            <th>Razón social</th>
            <!--<th>Domicilio postal</th>
            <th>Domicilio servicio</th>
            <th>Circunscripcion</th>
            <th>Sector</th>
            <th>Tipo</th>
            <th>Manzana</th>
            <th>Parcela</th>
            <th>Unidad funcional</th>
            <th>Latitud</th>
            <th>Longitud</th>-->
            <th>Estado</th>
            <th>Datos personales</th>
            <!--<th>Fecha alta</th>
            <th>Fecha baja</th> -->
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuarios) do |usuario| %>
            <td><%= usuario.categorium.codigo %></td>
            <td><%= usuario.numero %></td>
            <td><%= usuario.razon_social %></td>
            <!--<td><%= usuario.domicilio_postal %></td>
            <td><%= usuario.domicilio_servicio %></td>
            <td><%= usuario.circunscripcion %></td>
            <td><%= usuario.sector %></td>
            <td><%= usuario.tipo %></td>
            <td><%= usuario.manzana %></td>
            <td><%= usuario.parcela %></td>
            <td><%= usuario.unidad_funcional %></td>
            <td><%= usuario.latitud %></td>
            <td><%= usuario.longitud %></td>-->
            <td class="text-center">
              <span class="label label-<%= usuario.estado.to_s == 'Alta' ? 'success' : 'danger' %>">
              <%= usuario.estado %>
              </span>
            </td>
            <td><%= usuario.persona %></td>
            <!--<td><%= usuario.fecha_alta %></td>
            <td><%= usuario.fecha_baja %></td>-->
            <td class="text-center">
                <%= link_to usuario, class: 'btn btn-sm btn-default' do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
                <%= link_to edit_usuario_path(usuario), class: 'btn btn-sm btn-default' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to usuario, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                <% end %>
            </td>
      <% end %>
    </tbody>
  </table>
</div>
