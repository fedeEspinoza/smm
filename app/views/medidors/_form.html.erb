<%= form_for(@medidor, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @medidor.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@medidor.errors.count, "error") %> prohibited this medidor from being saved:</h4>

      <ul>
      <% @medidor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :multiplicador, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :multiplicador, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :marca, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :marca, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :modelo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :modelo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_alta, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_alta, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_baja, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_baja, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_medidor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :tipo_medidor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
