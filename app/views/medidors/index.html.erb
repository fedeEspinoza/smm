<div class="page-header">
  <%= link_to new_medidor_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Medidor" %>
  <% end %>
  <h4>Listado de Medidores</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "calculator", text: "Medidores" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Número</th>
            <th>Multiplicador</th>
            <th>Marca</th>
            <th>Modelo</th>
            <!-- <th>Fecha alta</th>
            <th>Fecha baja</th> -->
            <th>Tipo medidor</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @medidors.each do |medidor| %>
        <tr>
          <td><%= medidor.numero %></td>
          <td><%= medidor.multiplicador %></td>
          <td><%= medidor.marca %></td>
          <td><%= medidor.modelo %></td>
          <!-- <td><%= medidor.fecha_alta %></td>
          <td><%= medidor.fecha_baja %></td> -->
          <td><%= medidor.tipo_medidor %></td>
          <td class="text-center">
            <%= link_to medidor, class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
            <%= link_to edit_medidor_path(medidor), class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to medidor, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
