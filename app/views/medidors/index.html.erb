<div class="page-header">
  <%= link_to new_medidor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Medidor
  <% end %>
  <h4>Listado de Medidores</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Número</th>
            <th>Multiplicador</th>
            <th>Tipo de Medidor</th>
            <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @medidors) do |medidor| %>
        <td><%= medidor.numero %></td>
        <td><%= medidor.multiplicador %></td>
        <td><%= medidor.tipo_medidor %></td>
        <td style="width: 150px;">
        <%= link_to medidor, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_medidor_path(medidor), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to medidor, class: 'btn btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
