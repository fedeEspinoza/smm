<div class="page-header">
  <%= link_to new_categorium_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Categoría
  <% end %>
  <h4>Listado de Categoría</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Código</th>
          <th>Descripción</th>
          <th class="text-center col-md-1">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @categoria) do |categorium| %>
        <td><%= categorium.codigo %></td>
        <td><%= categorium.descripcion %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', categorium %></li>
              <li><%= link_to 'Editar', edit_categorium_path(categorium) %></li>
              <li><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Estás seguro?' } %></li>
            </ul>          
          </div>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
