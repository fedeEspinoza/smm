<div class="page-header">
  <%= link_to new_categorium_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nueva Categoría" %>
  <% end %>
  <h4>Listado de Categorías</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Código</th>
          <th>Descripción</th>
          <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @categoria) do |categorium| %>
        <td><%= categorium.codigo %></td>
        <td><%= categorium.descripcion %></td>
        <td style="width: 150px;">
        <%= link_to categorium, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_categorium_path(categorium), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to categorium, class: 'btn btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
