<div class="page-header">
  <%= link_to categoria_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_categorium_path(@categorium), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Ver Categoría</h4>
</div>

<dl class="dl-horizontal">
  <dt>Código:</dt>
  <dd><%= @categorium.codigo %></dd>

  <dt>Descripción:</dt>
  <dd><%= @categorium.descripcion %></dd>

</dl>
