<div class="page-header">
  <%= link_to new_tipo_medidor_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Tipo medidor" %>
  <% end %>
  <h4>Listado de tipo_medidors</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <!--<th>Codigo</th>
            <th>Descripcion</th>-->
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tipo_medidors) do |tipo_medidor| %>
            <td><%= tipo_medidor.nombre %></td>
            <!--<td><%= tipo_medidor.codigo %></td>
            <td><%= tipo_medidor.descripcion %></td>-->
            <td><%= link_to 'Ver', tipo_medidor %></td>
        <td><%= link_to 'Editar', edit_tipo_medidor_path(tipo_medidor) %></td>
        <td><%= link_to 'Eliminar', tipo_medidor, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
