<div class="page-header">
  <%= link_to new_zona_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Zona
  <% end %>
  <h4>Listado de zonas</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Grupo</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @zonas) do |zona| %>
            <td><%= zona.nombre %></td>
            <td><%= zona.grupo %></td>
            <td><%= link_to 'Ver', zona %></td>
        <td><%= link_to 'Editar', edit_zona_path(zona) %></td>
        <td><%= link_to 'Eliminar', zona, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
