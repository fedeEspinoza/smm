<div class="page-header">
  <%= link_to new_rutum_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nueva Ruta" %>    
  <% end %>
  <h4>Listado de rutas</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "road", text: "Rutas" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Número</th>
            <th>Nombre</th>
            <th>Zona</th>
            <th>Descripción</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ruta) do |rutum| %>
            <td><%= rutum.numero %></td>
            <td><%= rutum.nombre %></td>
            <td><%= rutum.zona %></td>
            <td><%= rutum.descripcion %></td>
        <td class="text-center">
        <%= link_to rutum, class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_rutum_path(rutum), class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to rutum, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
