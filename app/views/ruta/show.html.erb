<div class="page-header">
  <%= link_to ruta_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_rutum_path(@rutum), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Ver Ruta</h4>
</div>
<ol class="breadcrumb">
  <li>
    <%= link_to ruta_path do %>
        <%= fa_icon "road", text: "Rutas" %>
    <% end %>
  </li>
  <li class="active">
    Ver Ruta
  </li>
</ol>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= fa_icon "road" %> Datos de la Ruta</h3>
  </div>
  <div class="panel-body">

    <dl class="dl-horizontal">
      <dt>Número:</dt>
      <dd><%= @rutum.numero %></dd>

      <dt>Nombre:</dt>
      <dd><%= @rutum.nombre %></dd>

      <dt>Zona:</dt>
      <dd><%= @rutum.zona %></dd>

      <dt>Descripción:</dt>
      <dd><%= @rutum.descripcion %></dd>

    </dl>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= fa_icon "user" %> Usuarios Asignados</h3>
  </div>
  <div class="panel-body">  
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Categoría</th>
                <th>Número</th>
                <th>Razón social</th>
                <th>Datos personales</th>
                <th>Domicilio de servicio</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @rutum.usuarios) do |usuario| %>
                <td><%= usuario.categorium %></td>
                <td><%= usuario.numero %></td>
                <td><%= usuario.razon_social %></td>
                <td><%= usuario.persona %></td>            
                <td><%= usuario.domicilio_servicio %></td>     
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
