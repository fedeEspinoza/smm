<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Sistema de Micromedición de Medidores de Agua y Energía Eléctrica</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <% if user_signed_in? %> 
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              <% end %> 
              <%= link_to "SMM", "/", class: "navbar-brand" %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <% if user_signed_in? %> 
                <ul class="nav navbar-nav navbar-right">
                  <li><a href="#menu-toggle" id="menu-toggle"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.email %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                          <%= link_to edit_user_registration_path do %>
                            <%= fa_icon "user", text: "Mi cuenta" %>
                          <% end %>
                        </li>
                        <li class="divider"></li>
                        <li>
                          <%= link_to destroy_user_session_path, method: :delete, id: "salir" do %>
                            <%= fa_icon "sign-out", text: "Salir" %>
                          <% end %>
                        </li>
                    </ul>
                  </li>
                </ul>
              <% end%> 
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">
  
    <% if user_signed_in? %> 
    <div id="wrapper">
    <% else %>  
    <div id="wrapper" class="toggled">
    <% end %>  
    
        <!-- Sidebar -->
        <% if user_signed_in? %> 
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li><%= link_to index_path do %>
                  <%= fa_icon "home", text: "Inicio" %>
                <% end %>
                </li>
                <li><%= link_to categoria_path do %>
                  <%= fa_icon "industry", text: "Categorias" %>
                <% end %>
                </li>
                <li><%= link_to grupos_path do %>
                  <%= fa_icon "group", text: "Grupos" %>
                <% end %>  
                </li>
                <li><%= link_to prioridads_path do %>
                  <%= fa_icon "list-alt", text: "Prioridades" %>
                <% end %>
                </li>
                <li><%= link_to zonas_path do %>
                  <%= fa_icon "object-group", text: "Zonas" %>
                <% end %>  
                </li>
                <li><%= link_to novedads_path do %>
                  <%= fa_icon "newspaper-o", text: "Novedades" %>
                <% end %>  
                </li>
                <li><%= link_to medidors_path do %>
                  <%= fa_icon "calculator", text: "Medidores" %>
                <% end %>  
                </li>
                <li><%= link_to estados_path do %>
                  <%= fa_icon "wpforms", text: "Estados" %>
                <% end %>
                </li>
                <li><%= link_to usuarios_path do %>
                  <%= fa_icon "user", text: "Usuarios" %>
                <% end %>
                </li>
                <li><%= link_to historial_medicions_path do %>
                  <%= fa_icon "line-chart", text: "Mediciones" %>
                <% end %>
                </li>            
                </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <% end %>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <%= bootstrap_flash %>
                <%= yield %>                
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    </div>

    <!-- Menu Toggle Script -->
    <script type="text/javascript">
      $('#document').ready(function(){
        $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
          if ( $("#menu-toggle span").attr('class') == "glyphicon glyphicon-chevron-left" )
          {
            $("#menu-toggle span").removeClass("glyphicon glyphicon-chevron-left");
            $("#menu-toggle span").addClass("glyphicon glyphicon-chevron-right");
            console.log("Class name: "+$("#menu-toggle span").attr('class'))
          }            
          else
          {
            console.log("Class name: "+$("#menu-toggle span").attr('class'))
            $("#menu-toggle span").removeClass("glyphicon glyphicon-chevron-right");
            $("#menu-toggle span").addClass("glyphicon glyphicon-chevron-left");
          }            
        });
      });
    </script>

</body>
</html>
