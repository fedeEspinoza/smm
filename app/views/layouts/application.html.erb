<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Sistema de Micromedición de Medidores de Agua y Energía Eléctrica</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand"><%= link_to "SMM", "/", class: "navbar-brand" %></li>
          <% if user_signed_in? %>
            <li><%= link_to index_path do %>
              <%= fa_icon "home", text: "Inicio" %>
            <% end %>
            </li>
            <li><%= link_to categoria_path do %>
              <%= fa_icon "industry", text: "Categorias" %>
            <% end %>
            </li>
            <li><%= link_to grupos_path do %>
              <%= fa_icon "group", text: "Grupos" %>
            <% end %>  
            </li>
            <li><%= link_to prioridads_path do %>
              <%= fa_icon "list-alt", text: "Prioridades" %>
            <% end %>
            </li>
            <li><%= link_to zonas_path do %>
              <%= fa_icon "object-group", text: "Zonas" %>
            <% end %>  
            </li>
            <li><%= link_to novedads_path do %>
              <%= fa_icon "newspaper-o", text: "Novedades" %>
            <% end %>  
            </li>
            <li><%= link_to medidors_path do %>
              <%= fa_icon "calculator", text: "Medidores" %>
            <% end %>  
            </li>
            <li><%= link_to estados_path do %>
              <%= fa_icon "wpforms", text: "Estados" %>
            <% end %>
            </li>
            <li><%= link_to usuarios_path do %>
              <%= fa_icon "user", text: "Usuarios" %>
            <% end %>
            </li>
            <li><%= link_to historial_medicions_path do %>
              <%= fa_icon "line-chart", text: "Mediciones" %>
            <% end %>
            </li>
            <li><%= link_to destroy_user_session_path, method: :delete do %>
              <%= fa_icon "sign-out", text: "Salir" %>
            <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= bootstrap_flash %>
            <br/>
            <a href="#" class="btn btn-default" id="menu-toggle">
              <span class="glyphicon glyphicon-menu-hamburger"></span>
            </a>

            <%= yield %>

            <!-- Menu Toggle Script -->
            <script>
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            </script>            
          </div>
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->    
  </div>
</body>
</html>
