<div class="page-header">
  <%= link_to new_usuario_persona_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Usuario persona
  <% end %>
  <h4>Listado de usuario_personas</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Usuario</th>
            <th>Persona</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @usuario_personas) do |usuario_persona| %>
            <td><%= usuario_persona.usuario %></td>
            <td><%= usuario_persona.persona %></td>
            <td><%= link_to 'Ver', usuario_persona %></td>
        <td><%= link_to 'Editar', edit_usuario_persona_path(usuario_persona) %></td>
        <td><%= link_to 'Eliminar', usuario_persona, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
