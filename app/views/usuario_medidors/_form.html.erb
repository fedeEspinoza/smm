<%= form_for(@usuario_medidor, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @usuario_medidor.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@usuario_medidor.errors.count, "error") %> prohibited this usuario_medidor from being saved:</h4>

      <ul>
      <% @usuario_medidor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :usuario_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :usuario_id, Usuario.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :medidor_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :medidor_id, Medidor.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_alta, class: "col-sm-2 control-label" %>
    <div class="col-lg-2">
      <%= f.text_field :fecha_alta, class: "form-control", id: "datepicker_alta", required: false %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_baja, class: "col-sm-2 control-label" %>
    <div class="col-lg-2">
      <%= f.text_field :fecha_baja, class: "form-control", id: "datepicker_baja", required: false %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('document').ready(function(){
    $("#datepicker_alta").datepicker();
    $("#datepicker_baja").datepicker();
  });
</script>