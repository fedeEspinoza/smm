<%= form_for(@zona_usuario, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @zona_usuario.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@zona_usuario.errors.count, "error") %> prohibited this zona_usuario from being saved:</h4>

      <ul>
      <% @zona_usuario.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :zona_id, "Zona", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :zona_id, Zona.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :usuario_id, "Usuario", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.collection_select :usuario_id, Usuario.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :orden, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :orden, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
