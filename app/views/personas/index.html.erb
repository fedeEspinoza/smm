<div class="page-header">
  <%= link_to new_persona_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nueva Persona" %>
  <% end %>
  <h4>Listado de Personas</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "male", text: "Personas" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Tipo de documento</th>
            <th>N° de documento</th>
            <th>Apellido</th>
            <th>Nombres</th>
            <th>Teléfono</th>
            <th>E-mail</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @personas) do |persona| %>
            <td><%= persona.tipo_documento %></td>
            <td><%= persona.nro_documento %></td>
            <td><%= persona.apellido %></td>
            <td><%= persona.nombre %></td>
            <td><%= persona.telefono %></td>
            <td><%= persona.email %></td>
            <td class="text-center">
              <%= link_to persona, class: 'btn btn-sm btn-default' do %>
                <span class="glyphicon glyphicon-search"></span>
              <% end %>
              <%= link_to edit_persona_path(persona), class: 'btn btn-sm btn-default' do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to persona, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>            
      <% end %>
    </tbody>
  </table>
</div>
