<div class="page-header">
  <%= link_to new_persona_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva Persona
  <% end %>
  <h4>Listado de Personas</h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Tipo de documento</th>
            <th>N° de documento</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>E-mail</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @personas) do |persona| %>
            <td><%= persona.tipo_documento %></td>
            <td><%= persona.nro_documento %></td>
            <td><%= persona.apellido %></td>
            <td><%= persona.nombre %></td>
            <td><%= persona.telefono %></td>
            <td><%= persona.email %></td>
            <td><%= link_to 'Ver', persona %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
