<div class="page-header">
  <%= link_to personas_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_persona_path(@persona), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Ver Persona</h4>
</div>
<ol class="breadcrumb">
  <li>
    <%= link_to personas_path do %>
        <%= fa_icon "male", text: "Personas" %>
    <% end %>
  </li>
  <li class="active">
    Ver Persona
  </li>
</ol>

<dl class="dl-horizontal">
  <dt>Tipo documento:</dt>
  <dd><%= @persona.tipo_documento %></dd>

  <dt>N° de documento:</dt>
  <dd><%= @persona.nro_documento %></dd>

  <dt>Apellido:</dt>
  <dd><%= @persona.apellido %></dd>

  <dt>Nombre:</dt>
  <dd><%= @persona.nombre %></dd>

  <dt>Teléfono:</dt>
  <dd><%= @persona.telefono %></dd>

  <dt>E-mail:</dt>
  <dd><%= @persona.email %></dd>

</dl>
