<div class="page-header">
  <%= link_to empleados_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_empleado_path(@empleado), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Ver Empleado</h4>
</div>
<ol class="breadcrumb">
  <li>
    <%= link_to personas_path do %>
        <%= fa_icon "male", text: "Empleados" %>
    <% end %>
  </li>
  <li class="active">
    Ver Empleado
  </li>
</ol>

<dl class="dl-horizontal">
  <dt>N° de legajo:</dt>
  <dd><%= @empleado.nro_legajo %></dd>

  <dt>Tipo de documento:</dt>
  <dd><%= @empleado.tipo_documento %></dd>

  <dt>N° documento:</dt>
  <dd><%= @empleado.nro_documento %></dd>

  <dt>Apellido:</dt>
  <dd><%= @empleado.apellido %></dd>

  <dt>Nombre:</dt>
  <dd><%= @empleado.nombre %></dd>

  <dt>Fecha de alta:</dt>
  <dd><%= @empleado.fecha_alta %></dd>

  <dt>Fecha de baja:</dt>
  <dd><%= @empleado.fecha_baja %></dd>

</dl>
