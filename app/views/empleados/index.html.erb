<div class="page-header">
  <%= link_to new_empleado_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Empleado" %>
  <% end %>
  <h4>Listado de Empleados</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "male", text: "Empleados" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>N° de legajo</th>
            <th>Tipo de documento</th>
            <th>N° de documento</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th class="text-center">Estado</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @empleados) do |empleado| %>
        <td><%= empleado.nro_legajo %></td>
        <td><%= empleado.tipo_documento %></td>
        <td><%= empleado.nro_documento %></td>
        <td><%= empleado.apellido %></td>
        <td><%= empleado.nombre %></td>
        <td class="text-center">
          <span class="label label-<%= empleado.estado.to_s == 'Alta' ? 'success' : 'danger' %>">
            <%= empleado.estado %>
          </span>
        </td>
        <td class="text-center">
        <%= link_to empleado, class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_empleado_path(empleado), class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to empleado, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
