<div class="page-header">
  <%= link_to new_grupo_path, class: 'btn btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Grupo" %>
  <% end %>
  <h4>Listado de Grupos</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "group", text: "Grupos" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Código</th>
            <th class="col-md-2">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @grupos) do |grupo| %>
        <td><%= grupo.nombre %></td>
        <td><%= grupo.descripcion %></td>
        <td><%= grupo.codigo %></td>
        <td class="text-center">
        <%= link_to grupo, class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
        <%= link_to edit_grupo_path(grupo), class: 'btn btn-sm btn-default' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to grupo, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
