<%= form_for(@historial_medicion, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @historial_medicion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@historial_medicion.errors.count, "error") %> prohibited this historial_medicion from being saved:</h4>

      <ul>
      <% @historial_medicion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :novedad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :novedad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :medidor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :medidor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estado_medidor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :estado_medidor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_medicion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_medicion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_modificacion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :fecha_modificacion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary", value: "Guardar"%>
    </div>
  </div>
<% end %>
